{
  "{{-once-}}": {
    "{{-min-expand-}}": true,

    "{{-func-}}": {
      "{new-ver}": [ "=Trim", "{ver-arg}" ],
    },
  },

  "{new-ver}": "0.2.0", // the new value

  "{{-inp-}}": [ "LICENSE", "pubspec.yaml", "README.md", "lib/options.dart", "scripts/build*", ],
  
  "/(v|ver=[\\\"\\']?|version\\s*[\\=\\:]?\\s*[\\\"\\']?)(\\d+\\.\\d+\\.\\d+(-\\d+)?)/i":
    '${1}{new-ver}',

  "{{-run-}}": '--expand "{{-inp-}}"', // non-incremental (always enforced)
}
