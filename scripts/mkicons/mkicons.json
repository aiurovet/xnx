// Generate icons for this application using itself
// The file designed for runs primarily on Linux
// Requires: Google Chrome, ImageMagick's convert, png2icns as well as InkScape for Wine

{
  "{{-rename-keywords-}}": {
    "{{-cmd-}}": "{cmd}",
    "{{-cur-dir-}}": "{cur-dir}",
    "{{-can-expand-content-}}": "{can-expand-content}",
    "{{-detect-paths-}}": "{dtp}",
    "{{-drop-}}": "{drop}",
    "{{-expand-content-}}": "{expand-content}",
    "{{-inp-}}": "{inp}",
    "{{-next-}}": "{next}",
    "{{-out-}}": "{out}",
    "{{-run-}}": "{run}",
    "{{-stop-}}": "{stop}" // stop immediately
  },

  "{{-if-}}": { "!=": [ "${WINE}", "" ], "{{-then-}}": {
    // Chrome under Wine is out of date, ImageMagick and Inkscape are failing to process
    "{run}": "cmd /c echo Creating app icons under Wine is disabled",
    "{next}": null
  } },

  "{dtp}": "\\{[^\\{\\}]+\\-(dir|path|pthp)\\}",
  "{prj}": "doul",

  "{{-import-}}": "../../examples/cmd.json",

  "{bin-os-dir}": "{cur-dir}/../../bin/{OsType}",
  "{out-dir}": "{bin-os-dir}",

  "{R}": [
    // Ensure directory structure matches expectations
    {
      "{run}": [
        // Remove possible remnants from the previous run
        "--delete out png svg",
        // Ensure temporary and the OS-specific output and icon directories are created
        '--mkdir png svg "{out-dir}"'
      ]
    },

    {
      "{drop}": "{run}",

      "{can-expand-content}": true,

      "{param}": [
        { "{dim}":   16, "{scn-transform}":  "",               "{stroke-width}": "1",   "{drw-transform-main}": "translate(1,1)",     "{drw-transform-glow}": "translate(2,2)" },
        { "{dim}":   24, "{scn-transform}":  "scale(1.5,1.5)", "{stroke-width}": "1.5", "{drw-transform-main}": "translate(1.5,1.5)" },
        { "{dim}":   32, "{scn-transform}":  "scale(  2,  2)", "{stroke-width}": "1" },
        { "{dim}":   48, "{scn-transform}":  "scale(  3,  3)" },
        { "{dim}":   64, "{scn-transform}":  "scale(  4,  4)" },
        { "{dim}":   96, "{scn-transform}":  "scale(  6,  6)" },
        { "{dim}":  128, "{scn-transform}":  "scale(  8,  8)" },
        { "{dim}":  256, "{scn-transform}":  "scale( 16, 16)" },
        { "{dim}":  512, "{scn-transform}":  "scale( 32, 32)" },
        { "{dim}": 1024, "{scn-transform}":  "scale( 64, 64)" }
      ],

      "{inp}": "{cur-dir}/{prj}.svg",
      "{out}": "{cur-dir}/png/{prj}_{dim}x{dim}.png",
      "{cmd}": "{svg2png} --window-size={dim},{dim} --screenshot={out} \"file://{inp}\""
    },

    {
      "{drop}": [ "{param}" ],

      "{png-dir}": "{cur-dir}/png",
      "{icon-name}": "{prj}",
      "{icon-pthp}": "{png-dir}/{icon-name}",

      "{exe-pthp}": "{bin-os-dir}/{prj}",

      "{{-if-}}" : { "==/i": [ "{OsType}", "Linux" ], "{{-then-}}": {
        "{run}": [
          //'png2icns "{out-dir}/{icon-name}.icns" "{png-dir}/{icon-name}_16x16.png" "{png-dir}/{icon-name}_32x32.png" "{png-dir}/{icon-name}_128x128.png" "{png-dir}/{icon-name}_256x256.png" "{png-dir}/{icon-name}_512x512.png" "{png-dir}/{icon-name}_1024x1024.png"',
          //'{convert} +antialias "{icon-pthp}_16x16.png" "{icon-pthp}_24x24.png" "{icon-pthp}_32x32.png" "{icon-pthp}_48x48.png" "{icon-pthp}_256x256.png" "{exe-pthp}.ico"',
          '--move "{icon-pthp}_16x16.png" "{icon-pthp}_24x24.png" "{icon-pthp}_32x32.png" "{icon-pthp}_48x48.png" "{icon-pthp}_64x64.png" "{icon-pthp}_96x96.png" "{out-dir}"'
        ]
      }, "{{-else-}}" : { "{{-if-}}" : { "==/i": [ "{OsType}", "macOS" ], "{{-then-}}": {
        "{png-dir-mac}": "{png-dir}.iconset",
        "{run}": [
          '--copy "{icon-pthp}_32x32.png" "{png-dir}/icon_16x16@2x.png"',
          '--move "{icon-pthp}_64x64.png" "{png-dir}/icon_32x32@2x.png"',
          '--copy "{icon-pthp}_256x256.png" "{png-dir}/icon_128x128@2x.png"',
          '--copy "{icon-pthp}_512x512.png" "{png-dir}/icon_256x256@2x.png"',
          '--move "{icon-pthp}_1024x1024.png" "{png-dir}/icon_512x512@2x.png"',
          '--move "{icon-pthp}_16x16.png" "{png-dir}/icon_16x16.png"',
          '--move "{icon-pthp}_32x32.png" "{png-dir}/icon_32x32.png"',
          '--move "{icon-pthp}_128x128.png" "{png-dir}/icon_128x128.png"',
          '--move "{icon-pthp}_256x256.png" "{png-dir}/icon_256x256.png"',
          '--move "{icon-pthp}_512x512.png" "{png-dir}/icon_512x512.png"',
          '--delete "{icon-pthp}_24x24.png" "{icon-pthp}_48x48.png" "{icon-pthp}_96x96.png"',

          '--move "{png-dir}" "{png-dir-mac}"',
          'iconutil --convert icns -o "{out-dir}/{icon-name}.icns" "{png-dir-mac}"'
        ]
      }, "{{-else-}}" : { "{{-if-}}" : { "==/i": [ "{OsType}", "Windows" ], "{{-then-}}": {
        "{run}": [
          '{convert} +antialias "{icon-pthp}_16x16.png" "{icon-pthp}_24x24.png" "{icon-pthp}_32x32.png" "{icon-pthp}_48x48.png" "{icon-pthp}_256x256.png" "{exe-pthp}.ico"',
          '"${ProgramFiles(x86)}\\Resource Hacker\\ResourceHacker.exe" -open "{exe-pthp}.exe" -save "{exe-pthp}.exe" -action addskip -res "{exe-pthp}.ico" -mask ICONGROUP,MAINICON',
          '--delete "{exe-pthp}.ico"'
        ]
      } } } } } }
    },

    {
      "{run}": "--delete png svg"
    }
  ]
}
