#!/bin/bash

################################################################################

PRJ_NAME="doul"
ICO_DIR=$( dirname "${0}" )
SCR_DIR=$( dirname "${ICO_DIR}" )
PRJ_EXE="${SCR_DIR}/../bin/linux/${PRJ_NAME}"

################################################################################

if [ ! -f "${PRJ_EXE}" ]; then
  "${SCR_DIR}/build" || exit 1
fi

"${PRJ_EXE}" -d "${ICO_DIR}" ${@}

exit ${?}

################################################################################
