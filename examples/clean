#!/bin/sh

set -Ee

################################################################################
# This script removes generated files from xnx/examples directory
################################################################################

DIR="$(dirname "${0}")"
HAS=""

################################################################################

echo ""

for d in \
    "${DIR}/flutter_app_icons/android" \
    "${DIR}/flutter_app_icons/ios" \
    "${DIR}/flutter_app_icons/linux" \
    "${DIR}/flutter_app_icons/macos" \
    "${DIR}/flutter_app_icons/web" \
    "${DIR}/flutter_app_icons/windows" \
    "${DIR}/ms_office/out" \
    "${DIR}/ms_office/unz" \
    "${DIR}/multi_conf/out" \
    "${DIR}/multi_icon/out" \
    "${DIR}/site_env/ReleaseFiles" \
    "${DIR}/web_config/out" \
    "${DIR}/../out"
do
  if [ -d "${d}" ]; then
    HAS="1"
    echo "Cleaning: \"${d}\""
    rm -rf "${d}"
  fi
done

################################################################################

if [ -n "${HAS}" ]; then
  echo ""
fi

echo "The cleanup successfully completed"
echo ""
exit 0

################################################################################
