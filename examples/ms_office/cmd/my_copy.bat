@echo off

rem ############################################################################

set SRC=%1
set DST=%2

rem ############################################################################

if "%SRC%" == "" goto FAIL
if "%DST%" == "" goto FAIL

xcopy /E "%SRC" "%DST%"
if errorlevel 1 goto FAIL

rem ############################################################################

:GOOD
exit /B 0

:FAIL
echo Failed to copy "%SRC" to "%DST%"
exit /B 1

