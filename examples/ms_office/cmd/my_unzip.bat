@echo off

rem ############################################################################
rem Depends on unzip.exe (can be downloaded as part of GnuWin32)
rem ############################################################################

if "%2" == "" goto FAIL
if not "%3" == "" goto FAIL

rem ############################################################################

DIR=%1
INP=%2

rem ############################################################################

mkdir "%DIR%"
if errorlevel 1 goto FAIL

unzip -o -d "%DIR%" "%INP%"
if errorlevel 1 goto FAIL

:SUCCESS
exit /B 0

:FAIL
exit /B 1

rem ############################################################################
