#!/bin/bash

################################################################################

SRC="${1}"
DST="${2}"

################################################################################

if [[ "${SRC}" != "" ]] && [[ "${DST}" != "" ]]; then
    mkdir -p "${DST}" &&\
    cp -pr "${SRC}"/* "${DST}" &&\
    exit 0
fi

################################################################################

echo "Failed to copy \"${SRC}\" to \"${DST}\""
exit 1

################################################################################
