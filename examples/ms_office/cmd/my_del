#!/bin/bash

################################################################################

function exitApp() {
  (( ${#} >= 2 )) && echo "${2}"
  exit ${1}
}

################################################################################

(( ${#} != 1 )) && exitApp 1 "Invalid number of parameters: ${#} (expected: 1)"

################################################################################

DIR="${1}"

################################################################################

if [ -d "${DIR}" ]; then
  rm -rf "${DIR}" || exitApp 1 "Failed to remove directory \"${DIR}\""
fi

exitApp 0

################################################################################
