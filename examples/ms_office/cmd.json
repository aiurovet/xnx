{
  "cmd": [
    // You can specify either just command names, or command names with options, or command names with options and
    // arguments' placeholders. But in the latter case, you need to define those placeholders in the parent file

    {
      "{{-if-}}": { "!=": [ "${HOME}", "" ], "{{-then-}}": {
        "{{-if-}}": { "~": [ "${OSTYPE}", "^LINUX" ], "{{-then-}}": { // you need to export OSTYPE
          "{OsType}": "Linux"
        }, "{{-else-}}": { "{{-if-}}": { "~/i": [ "${OSTYPE}", "^DARWIN" ], "{{-then-}}": {
          "{OsType}": "macOS"
        }, "{{-else-}}": {
          "{OsType}": "Unsupported OS"
        } } } },
        "{copy}": "cp -pr",
        "{move}": "mv -f",
        "{delete}": "rm -rf",
        "{remove}": "{delete}",
        "{rename}": "{move}",
        "{mkdir}": "mkdir -p",
        "{chrome}": "google-chrome",
        "{zip}": "cd \"{zip_dir}\" && zip -m -r \"{zip_out}\" * && cd .. && rm -rf \"{zip_dir}\"",
        "{unzip}": "unzip -o -d \"{zip_dir}\" \"{zip_inp}\""
      }, "{{-else-}}": { "{{-if-}}": { "!=": [ "${USERPROFILE}", "" ], "{{-then-}}": {
        "{copy}": "copy /Y",
        "{move}": "ren",
        "{delete}": "del /F/Q/S",
        "{remove}": "{delete}",
        "{rename}": "{move}",
        "{mkdir}": "mkdir",
        "{chrome}": "chrome",
        "{zip}": "Compress-Archive \"{zip_dir}\" \"{zip_out}\"",
        "{unzip}": "Expand-Archive \"{zip_inp}\" \"{zip_dir}\""
      } } } }
    }
  ]
}
