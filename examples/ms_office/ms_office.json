{
  "x": {
    "rename": {
      //"{cmd}": "{c}",
      //"{cur-dir}": "{CD}",
      //"{exp-env}": "{EE}",
      //"{exp-inp}": "{EI}",
      //"{inp}": "{i}",
      //"{inp-dir}": "{id}",
      //"{inp-ext}": "{ix}",
      //"{inp-name}": "{in}",
      //"{inp-name-ext}": "{inx}",
      //"{inp-path}": "{ip}",
      //"{inp-sub-dir}": "{isd}",
      //"{inp-sub-path}": "{isp}",
      //"{import}": "{I}",
      //"{out}": "{o}"
    },
    "action": [
      { "{exp-env}": true, "{cur-dir}": "." },

      {
        "{out-file}":    "out/{inp-name}-{last-name}{inp-ext}",
        "{tmp-file}":    "{out-zip-dir}/{inp-sub-path}",
        "{out-zip-dir}": "{out-file}.dir"
      },

      // Define list of input filenames

      { "{inp}": "i*p/sample*.*x" },

      // Decompress source file

      {
        "{exp-inp}": false, "{out}": "",
        "{cmd}": "cmd/my_unzip \"{inp}.dir\" \"{inp}\""
      },

      // Copy source files to destination one by one, expand placeholders and compress to the new file

      {
        "{inp}": "**", // all files in all subdirectories
        "{exp-inp}": true,  "{cmd}": "expand-only",
        "{import}": "ms_office_data.json" // value should not contain any placeholders
      },

      // Compress output directories file

      {
        "{exp-inp}": false, "{out}": "{out-file}",
        "{cmd}": "cmd/my_zip \"{out-zip-dir}\" \"{out-file}\"",
        "{import}": "ms_office_data.json" // should not contain any placeholders
      },

      // Delete input directories file

      {
        "{exp-inp}": false, "{inp}": "", "{out}": "",
        "{cmd}": "cmd/my_del \"{inp}.dir\""
      }
    ]
  }
}
