{
  "x": {
    "rename": {
      //"{cmd}": "{c}",
      //"{cur-dir}": "{CD}",
      //"{exp-env}": "{EE}",
      //"{exp-inp}": "{EI}",
      //"{inp}": "{i}",
      //"{inp-dir}": "{id}",
      //"{inp-ext}": "{ix}",
      //"{inp-name}": "{in}",
      //"{inp-name-ext}": "{inx}",
      //"{inp-path}": "{ip}",
      //"{inp-sub-dir}": "{isd}",
      //"{inp-sub-path}": "{isp}",
      //"{import}": "{I}",
      //"{out}": "{o}"
    },
    "action": [
      { "{exp-env}": true, "{cur-dir}": "." },

      {
        "{src}":         "i*p/sample*.*x",
        "{inp-unz-top}": "{cur-dir}/inp_unz",
        "{inp-unz-dir}": "{inp-unz-top}/{inp-name-ext}.dir",
        "{out-top}":     "{cur-dir}/out",
        "{tmp-file}":    "{out-top}/{inp-sub-path}"
      },

      // Define list of input filenames

      { "{inp}": "{src}" },

      // Decompress source file

      {
        "{exp-inp}": false, "{out}": "",
        "{cmd}": "cmd/my_unzip \"{inp-unz-dir}\" \"{inp}\""
      },

      // Multiply decompressed source to destinations

      {
        "{exp-inp}": false, "{inp}": "{src}",
        "{cmd}": "cmd/my_copy \"{inp-unz-top}/{inp-name-ext}.dir\" \"{out-top}/{inp-name}-{last-name}{inp-ext}.dir\"",
        "{out}": "{tmp-file}",
        "{import}": "ms_office_data.json" // value should not contain any placeholders
      },

      // Copy source files to destination one by one, expand placeholders and compress to the new file

      {
        "{inp}": "{out-top}/**", // all files in all subdirectories
        "{exp-inp}": true,  "{cmd}": "expand-only",
        "{out}": "{tmp-file}",
        "{import}": "ms_office_data.json" // value should not contain any placeholders
      },

      // Compress output directories file

      {
        "{exp-inp}": false, "{inp}": "{src}", "{out-file}": "{out-top}/{inp-name}-{last-name}{inp-ext}",
        "{cmd}": "cmd/my_zip \"{out-file}.dir\" \"{out-file}\"",
        "{out}": "{tmp-file}",
        "{import}": "ms_office_data.json" // value should not contain any placeholders
      },

      // Delete input directories file

      {
        "{exp-inp}": false, "{inp}": "", "{out}": "",
        "{cmd}": "cmd/my_del \"{inp-unz-top}\""
      }
    ]
  }
}
