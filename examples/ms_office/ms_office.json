{
  "x": {
    "rename": {
      //"{cmd}": "{c}",
      //"{cur-dir}": "{CD}",
      //"{exp-env}": "{EE}",
      //"{exp-inp}": "{EI}",
      //"{inp}": "{i}",
      //"{inp-dir}": "{id}",
      //"{inp-ext}": "{ix}",
      //"{inp-name}": "{in}",
      //"{inp-name-ext}": "{inx}",
      //"{inp-path}": "{ip}",
      //"{inp-sub-dir}": "{isd}",
      //"{inp-sub-path}": "{isp}",
      //"{import}": "{I}",
      //"{out}": "{o}"
    },
    "action": [
      { "{exp-env}": true, "{cur-dir}": "." },

      {
        "{top-dir}":     "{cur-dir}",
        "{cmd-dir}":     "{top-dir}/cmd",
        "{inp-dir}":     "{top-dir}/inp",
        "{out-dir}":     "{top-dir}/out",
        "{ext}":         ".docx",
        "{inp-file}":    "{inp-dir}/{doc-name}{ext}",
        "{out-file}":    "{out-dir}/{doc-name}-{last-name}{ext}",
        "{tmp-file}":    "{out-zip-dir}/{inp-sub-path}",
        "{inp-zip-dir}": "{inp-file}.dir",
        "{out-zip-dir}": "{out-file}.dir"
      },

      // Define list of source filenames

      { "{doc-name}": [
        "sample1"/*,
        "sample2"*/
      ] },

      // Decompress source file

      {
        "{exp-inp}": false, "{inp}": "", "{out}": "",
        "{cmd}": "{cmd-dir}/my_unzip \"{inp-zip-dir}\" \"{inp-file}\""
      },

      // Copy source files to destination one by one, expand placeholders and compress to the new file

      {
        "{inp}": "{inp-zip-dir}/**", // all files in all subdirectories
        "{exp-inp}": true,  "{cmd}": "expand-only",
        "{import}": "ms_office_data.json"
      },

      // Compress output directories file

      {
        "{exp-inp}": false, "{inp}": "", "{out}": "",
        "{cmd}": "{cmd-dir}/my_zip \"{out-zip-dir}\" \"{out-file}\"",
        "{import}": 'ms_office_data.json'
      },

      { "": null }
    ]
  }
}
